
<div class="container">
	<%= simple_form_for(@post, url: posts_path , html: { class: 'form-horizontal' }) do |f| %> 
		<% if @post.errors.any?  %>
			<div id="error_explanation">
				<h2><%= pluralize(@post.errors.count,"error") %>prohibited this post from being saved</h2>
	
				<ul>
					<% @post.errors.full_messages.each do |message|  %>
					<li><%= message %></li>
					<% end %>
	
				</ul>
			</div>
	
		<% end %>
		
		<div class="field">
		
			<%= f.input :title  %>
		</div>
		<div class="field">
			<%= f.input :content  %>
		</div>
		<div class="field">
			
			<%= f.input :market_url %>
		</div>
		<div class="field">
			
			<%= f.input :image, as: :file %>
		</div>
		
		<div class="actions">
			<%= f.button :submit %>
		</div>
		
	<% end %>
</div>
