<% content_for :head do %>
  <%= stylesheet_link_tag "second" %>
<% end %>
<h1 class="text-center">Самые интересные новости в сети!</h1>
<!-- <div class="container"> -->
	
	<div class="button btn btn-primary news_b hide">
						<%= link_to 'Добавить новость', new_post_path  %>
					</div>
	<div class=" cont-flex">
	        <% @posts.each_with_index do |post, index| %>
	            
	           <div class="top-row">
    	       <% if index<3 or index==0 %>
                      <div class="top-col">
                             <div class="front-image text-center">
            					<%= image_tag post.image.url(:thumb) %>
            				</div>
            				<p class="front-post text-left">
            					<%= post.content.truncate(40) %>
            				</p>
            				<div class="button btn btn-more text-left"><%= link_to "Подробнее", post %></div>
            				<%# if admin_signed_in? %>
            				<div class="hide">
            					<div class="button btn btn-success">
            						<%= link_to 'Редактировать', edit_post_path(post) %> 
            					</div>
            					<div class="button btn btn-danger">
            			  			<%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
            			  		</div>
            					<div class="button btn btn-info">
            						<%= link_to "Посмотреть", post %>
            					</div>
            				</div>	
                          
                      </div>
                <% end %>
                    </div>
                    <% if index==3 %>
                       <% break %>
                   <% end %>
              <% end %>
    		
    		    
                    
                        
                
    		           
        			
            
    			
    		
    		
