
<h1>Посмотреть новость</h1>
<p id="notice"><%= notice %></p>


<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<%= image_tag @post.image.url(:big) %>
	<p class="content text-left"><%= @post.content %></p>
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		<% #if user_signed_in? %>
		<div class="button btn btn-info">
			<%= link_to 'На главную', posts_path %>
		</div>
		<div class="button btn btn-success">
		 	<%= link_to 'Редактировать', edit_post_path(@post) %> 
		 </div>
		 <div class="button btn btn-danger">
		  	<%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?' } %>
		  </div>
	  	<% #end %>
	</p>
	