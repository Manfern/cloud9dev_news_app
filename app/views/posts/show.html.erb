<h1 class="text-center">Самые интересные новости в сети!</h1>
<!-- <div class="container"> -->






	
<div class="second">
	<div class="container">
		
	        <% @posts.each_with_index do |post, index| %>
	            <% if index==0 %>
	            <!-- start top row -->
	               <div class="row top-row text-left">
	           <% end %>
    	       <% if index<3%>
    	       
                      <div class="top-item">
                             <div class="text-left">
            					<p>
            					<%= image_tag post.image.url(:thumb) %>
								<%= post.content.truncate(100) %>
								<div class="button btn  text-left"><%= link_to "Подробнее", post %></div>
								<br style="clear: both;" /></p>
            					<p><%=post.views %></p>
            				</div>
            				
            				
            				<% if admin_signed_in? %>
            				<div class="hide-block">
            					<div class="button btn btn-success">
            						<%= link_to 'Редактировать', edit_post_path(post) %> 
            					</div>
            					<div class="button btn btn-danger">
            			  			<%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
            			  		</div>
            					<div class="button btn btn-info">
            						<%= link_to "Посмотреть", post %>
            					</div>
            				</div>	
            				<% end %>
                          
                      </div>
                <% end %>
                    
                    <% if index==3 %>
                        </div> <!-- close top row -->
<!--Full news block -->
<div class="row">
	<div id="post_content">
		<h2>Новости на сегодня</h2>
		<h3><%=  @post.title %></h3>
		<%= image_tag @post.image.url(:big) %>
		<p class="content text-left"><%= @post.content.truncate(200) %></p>
		<p class="date">
			Submitted <%= time_ago_in_words(@post.created_at) %> ago
			</p>
			<div class="button btn text-left"><%= link_to "Подробнее", posts_path %></div>
			<% if admin_signed_in? %>
			<div class="hide-block">
			<div class="button btn btn-info">
				<%= link_to 'На главную', posts_path %>
			</div>
			<div class="button btn btn-success">
			 	<%= link_to 'Редактировать', edit_post_path(@post) %> 
			 </div>
			 <div class="button btn btn-danger">
			  	<%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?' } %>
			  </div>
		
			<div class="button btn btn-primary news_b hide">
							<%= link_to 'Добавить новость', new_post_path  %>
		</div>
		</div>
		<% end %>
	</div>
	<!-- end of full news block -->
	                        
	                        
	                        
	                       <div class="pic-col">
	                   <% end %>
	                   <% if index>=3 and index<=5 %>
	                       <div class="pic-col-item">
	                           
	                             <div class="text-center">
	            					<%= image_tag post.image.url(:medium) %>
	            				</div>
	            				<p class="text-left">
	            					<%= post.content.truncate(80) %>
	            				</p>
	            				<p><%=post.views %></p>
	            				<!--<div class="button btn  text-left"><%#= link_to "Подробнее", post %>-->
	            				<!--</div>-->
	            				<% if admin_signed_in? %>
	            				<div class="hide-block">
	            					<div class="button btn btn-success">
	            						<%= link_to 'Редактировать', edit_post_path(post) %> 
	            					</div>
	            					<div class="button btn btn-danger">
	            			  			<%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
	            			  		</div>
	            					<div class="button btn btn-info">
	            						<%= link_to "Посмотреть", post %>
	            					</div>
	            					<% end %>
	            				</div>	
	                          
	                      </div>
	                       
	                   <% end %>
	                   <% if index==5 %>
	                 
	                       </div>
	                       <div class="side-col">
	                   <% end %>
	                   <% if index>=5%>
	                       <div class="side-item">
	                           <div class="text-left">
	            					<p><%= image_tag post.image.url(:thumb) %>
									<%= post.content.truncate(80) %>
									<p><%=post.views %></p>
									<div class="button btn  text-left"><%= link_to "Подробнее", post %></div>
									<br style="clear: both;" />
									</p>
									
								</div>
	            				<% if admin_signed_in? %>
	            				<div class="hide-block">
	            					<div class="button btn btn-success">
	            						<%= link_to 'Редактировать', edit_post_path(post) %> 
	            					</div>
	            					<div class="button btn btn-danger">
	            			  			<%= link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
	            			  		</div>
	            					<div class="button btn btn-info">
	            						<%= link_to "Посмотреть", post %>
	            					</div>
	            				</div>	
	            				<% end %>
	                          
	                      </div>
	                       
	                   <% end %>
	                   <% if index==10 %>
	                 
	                       </div>
	                       <% break %>
	                   <% end %>
	              <% end %>
	    		
	    		    
	</div>
</div>                     
